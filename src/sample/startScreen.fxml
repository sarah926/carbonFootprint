<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="sample.StartScreen"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="20" vgap="20" style="-fx-background-color: #fcd2fa">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="20">
        <Label fx:id="numTranspo" alignment="CENTER" text="Calculate your carbon footprint for today!" wrapText="true"
               textAlignment="CENTER" maxWidth="400" textFill="#0b1742">
        <font>
               <Font name="Montserrat" size="45"/>
        </font>
        </Label>

        <Button fx:id="startGame" alignment="CENTER" text="start" onAction="#started" maxWidth="200">
        <font>
            <Font name="Montserrat" size="20"/>
        </font>
        </Button>


    </VBox>
</GridPane>